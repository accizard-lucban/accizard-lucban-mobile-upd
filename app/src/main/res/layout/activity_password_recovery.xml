<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Background Image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/header_background"
                android:scaleType="centerCrop"
                android:contentDescription="Header Background" />

            <!-- Header Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Logo Image -->
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:src="@drawable/accizard_logotype_svg"
                    android:contentDescription="App Logo" />

                <!-- Header Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="REPORT PROTECT PREVENT"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:letterSpacing="0.1"
                    android:textStyle="bold"
                    android:shadowColor="#80000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4" />
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

    <!-- Content Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/buttom_sheet_background"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/accizard_logo_svg" />

        <!-- Error Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Password Recovery"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Error Message -->
        <TextView
            android:id="@+id/error_message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="48dp"
            android:gravity="center"
            android:text="Recovery instructions have been\nsent to accizard@gmail.com."
            android:textColor="@color/dark_gray"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp" />

        <!-- Go Back Button -->
        <Button
            android:id="@+id/go_back_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/button_outline_background"
            android:text="Go Back to Login"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:elevation="0dp" />

    </LinearLayout>

</LinearLayout>