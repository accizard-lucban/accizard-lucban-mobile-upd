<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- Header Section with Image Background -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp">

                <!-- Background Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/header_background"
                    android:scaleType="centerCrop"
                    android:contentDescription="Header Background" />

                <!-- Header Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Logo Image -->
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="135dp"
                        android:layout_marginTop="-70dp"
                        android:contentDescription="App Logo"
                        android:src="@drawable/accizard_logotype_logomark_svg" />

                    <!-- Header Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="Welcome, New User!"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="55dp"
                        android:textColor="@android:color/white"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginRight="110dp"
                        android:layout_marginBottom="-155dp"
                        android:text="Sign up to continue"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

        <!-- Form Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/rounded_top_background"
            android:padding="24dp">

            <!-- Progress Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete Your Profile"
                android:textColor="@color/text_dark"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Final Step: Valid ID"
                android:textColor="@color/text_hint"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Progress Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/step_completed_background"
                    android:gravity="center"
                    android:textSize="16sp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:background="@color/orange_primary"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="2"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/step_completed_background"
                    android:gravity="center"
                    android:textSize="16sp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:background="@color/orange_primary"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="3"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/step_completed_background"
                    android:gravity="center"
                    android:textSize="16sp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:background="@color/orange_primary"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="4"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/step_active_background"
                    android:gravity="center"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Upload Valid ID Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Valid ID"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload a clear photo of your valid government-issued ID for verification"
                android:textColor="@color/text_hint"
                android:textSize="12sp"
                android:layout_marginBottom="24dp" />

            <!-- Image Upload Area with Placeholder -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp">

                <!-- Placeholder Container (shown when no image) -->
                <LinearLayout
                    android:id="@+id/placeholder_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/dashed_border_background"
                    android:gravity="center"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_gallery"
                        android:layout_marginBottom="16dp"
                        android:contentDescription="Upload Icon"
                        android:alpha="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to upload ID"
                        android:textColor="@color/text_hint"
                        android:textSize="14sp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Selected ID Preview (shown when image is selected) -->
                <ImageView
                    android:id="@+id/iv_valid_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dashed_border_background"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:contentDescription="Selected Valid ID" />

            </FrameLayout>

            <!-- Upload from Gallery Button -->
            <Button
                android:id="@+id/btn_upload_gallery"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Upload from Gallery"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:background="@drawable/button_outline_background"
                android:drawableStart="@drawable/ic_gallery"
                android:drawablePadding="12dp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- See list of Valid IDs Link -->
            <TextView
                android:id="@+id/tv_valid_ids_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See list of Valid IDs"
                android:textColor="@color/orange_primary"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:layout_marginBottom="40dp" />

            <!-- Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Back Button -->
                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_arrow_back"
                    android:background="@drawable/button_secondary_background"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerInside"
                    android:contentDescription="Back" />

                <!-- Next Button -->
                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Next"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_primary_background"
                    android:enabled="false" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>