<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header with logo and tagline -->
        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Logo Image -->
            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:src="@drawable/accizard_logotype_svg"
                android:contentDescription="App Logo" />

            <!-- Header Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="REPORT PROTECT PREVENT"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:letterSpacing="0.1" />

        </LinearLayout>

        <!-- ViewPager for onboarding screens -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/header_layout"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp" />

        <!-- Bottom section with indicators and button -->
        <RelativeLayout
            android:id="@+id/bottom_section"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@id/viewPager"
            android:background="@drawable/buttom_sheet_background"
            android:padding="30dp">

            <!-- Shield Logo -->
            <ImageView
                android:id="@+id/shield_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/accizard_logo_svg"
                android:layout_marginTop="20dp" />

            <!-- Title -->
            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shield_logo"
                android:layout_centerHorizontal="true"
                android:text="Welcome"
                android:textColor="@color/dark_gray"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_text"
                android:layout_centerHorizontal="true"
                android:text="AcciZard Lucban is your digital partner for\ncommunity safety and emergency response"
                android:textColor="@color/medium_gray"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="2dp" />

            <!-- Page Indicators -->
            <LinearLayout
                android:id="@+id/indicators_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_text"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <View
                    android:id="@+id/indicator1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/step_active_background"
                    android:layout_marginRight="8dp" />

                <View
                    android:id="@+id/indicator2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/inactive_step"
                    android:layout_marginRight="8dp" />

                <View
                    android:id="@+id/indicator3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/inactive_step"
                    android:layout_marginRight="8dp" />

                <View
                    android:id="@+id/indicator4"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/inactive_step"
                    android:layout_marginRight="8dp" />

                <View
                    android:id="@+id/indicator5"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/inactive_step" />
            </LinearLayout>

            <!-- Action Button -->
            <Button
                android:id="@+id/action_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/indicators_layout"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_primary_background"
                android:text="Get Started"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="4dp" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>