<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- Header Section with Image Background -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp">

                <!-- Background Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/header_background"
                    android:scaleType="centerCrop"
                    android:contentDescription="Header Background" />

                <!-- Header Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Logo Image -->
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="135dp"
                        android:layout_marginTop="-70dp"
                        android:contentDescription="App Logo"
                        android:src="@drawable/accizard_logotype_logomark_svg" />

                    <!-- Header Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="Welcome, New User!"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="55dp"
                        android:textColor="@android:color/white"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginRight="110dp"
                        android:layout_marginBottom="-155dp"
                        android:text="Sign up to continue"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

        <!-- Form Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/rounded_top_background"
            android:padding="24dp">

            <!-- Progress Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete Your Profile"
                android:textColor="@color/text_dark"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 3 of 4: Profile Picture"
                android:textColor="@color/text_hint"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Progress Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/step_completed_background"
                    android:gravity="center"
                    android:textSize="16sp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:background="@color/orange_primary"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="2"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/step_completed_background"
                    android:gravity="center"
                    android:textSize="16sp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:background="@color/orange_primary"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="3"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/step_active_background"
                    android:gravity="center"
                    android:textSize="16sp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:background="@color/background_gray"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="4"
                    android:textColor="@color/text_hint"
                    android:background="@drawable/inactive_step"
                    android:gravity="center"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Upload Profile Picture Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Profile Picture"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- Profile Picture Upload Area -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@drawable/dashed_border_background"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/ivProfilePicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profile_placeholder" />

                <Button
                    android:id="@+id/btnTakePhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📷 Take a Photo"
                    android:textColor="@color/text_hint"
                    android:textSize="14sp"
                    android:background="@android:color/transparent" />

            </LinearLayout>

            <!-- Upload from Gallery Button -->
            <Button
                android:id="@+id/btnUploadFromGallery"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/button_outline_background"
                android:text="📁 Upload from Gallery"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:layout_marginBottom="40dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/ic_arrow_back"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="120dp"
                    android:layout_height="56dp"
                    android:background="@drawable/button_primary_background"
                    android:text="Next"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>