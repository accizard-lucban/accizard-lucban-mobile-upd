<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- Header Section with Image Background -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp">

            <!-- Background Image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/header_background"
                android:scaleType="centerCrop"
                android:contentDescription="Header Background" />

            <!-- Header Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Logo Image -->
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:src="@drawable/accizard_logotype_svg"
                    android:contentDescription="App Logo" />

                <!-- Header Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="REPORT PROTECT PREVENT"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:letterSpacing="0.1"
                    android:textStyle="bold"
                    android:shadowColor="#80000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4" />
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <!-- White Rounded Card Overlay -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/buttom_sheet_background"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/accizard_logo_svg"
            android:contentDescription="Shield Logo"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulations!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have successfully created an account.\nPlease wait until your account is verified to\nlogin on the app."
            android:textColor="@color/text_hint"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnGoBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go Back to Login"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/outlined_button"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:minHeight="48dp" />
    </LinearLayout>
</LinearLayout>